<resources>
    <!-- Base application theme. -->
    <style name="Theme.20230513UdaybhaskarVSNYCSchools" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryVariant">@color/blue700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Title.Big" parent="Title">
        <item name="android:textSize">36sp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue700</item>
        <item name="android:fontFamily">@font/ebgaramond_extrabold</item>
    </style>

    <style name="Text.Big" parent="Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ebgaramond_medium</item>
    </style>

    <style name="Text.Error">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#D32F2F</item>
        <item name="android:fontFamily">@font/ebgaramond_semibold</item>
    </style>
</resources>